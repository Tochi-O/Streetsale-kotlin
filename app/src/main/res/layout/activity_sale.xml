<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SaleActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="SALE INFO"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/cardview_dark_background"

        />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/admineditbtn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Edit sale"
            android:visibility="gone"
            android:textSize="19sp"
            android:textStyle="italic" />
            <Button
                android:id="@+id/viewsoldbtn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginLeft="10dp"
                android:text="View Sold items"
                android:visibility="gone"
                android:textSize="19sp"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageviewsaleposter2"
            android:layout_width="150dp"
            android:layout_height="150dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/saledescview2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:text="Item"
            android:textSize="19sp"
            android:textStyle="bold" />
                <Button
                    android:id="@+id/viewinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="More"
                    android:visibility="visible"
                    android:textSize="18sp"
                    android:textStyle="italic" />
            <TextView
                android:id="@+id/addrView"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Item"
                android:visibility="gone"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/goToAddrbtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="3dp"
                android:text="Open in Maps"
                android:textSize="19sp"
                android:textStyle="italic" />

        <Button
            android:id="@+id/adminaddbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="3dp"
            android:text="ADD NEW ITEM"
            android:visibility="gone"
            android:textSize="19sp"
            android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="ALL ITEMS"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleritemspersale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"
            />




</LinearLayout>